<%= form_for(@booking, :url => new_booking_path, :html => { :method => 'GET' }) do |f| %>
    <%= f.hidden_field :number_of_passengers, value: @number_of_passengers %>
    <div class="booking_table">
    <table>
        <th></th>
        <th>Departing Time</th>
        <th>Flight Time</th>
        <%= collection_radio_buttons(:flight, :id, @flight_options, :id, :event_date_text) do |b| %>
            <tr>
                <td><%= b.radio_button %></td>
                <td><%= b.object.event_date_text %></td>
                <td><%= Time.at(b.object.duration).utc.strftime("%H:%M:%S") %></td>
            </tr>
        <% end %>
    </table>
    <%= f.submit%>
    </div>
<% end %>



