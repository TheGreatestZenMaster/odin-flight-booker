<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Flight Booker", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li><%= link_to "#{current_user.name.capitalize}", '#' %></li>
          <li><%= link_to "Bookings", user_path(session[:user_id]) %></li>
          <li><%= link_to "Log out", '#', method: "delete" %></li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>